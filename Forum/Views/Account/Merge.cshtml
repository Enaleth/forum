@model MergePage

<section class="content-box pad">
	<table>
		<tr>
			<td class="pad underline">Name</td>
			<td class="pad underline">Registered</td>
			<td class="pad underline">Last Online</td>
		</tr>
	@foreach(var item in Model.IndexItems) {
		<tr>
			<td class="pad">
				<p><a asp-controller="@nameof(Account)" asp-action="@nameof(Account.ConfirmMerge)" asp-route-sourceid="@Model.SourceId" asp-route-targetid="@item.Id" onclick="return confirm('Are you sure?');">@item.DisplayName</a></p>
				<p class="note">@item.Email</p>
			</td>
			<td class="pad">
				<p>@item.Registered</p>
				<p class="note">@item.Registered</p>
			</td>
			<td class="pad">
				<p>@item.LastOnline</p>
				<p class="note">@item.LastOnline</p>
			</td>
		</tr>
	}
	</table>
</section>

@{ ViewData["Title"] = $"User Index"; }
@section Header {@ViewData["Title"]}