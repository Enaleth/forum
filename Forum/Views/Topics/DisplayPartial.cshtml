@model TopicDisplayPartialPage

@if (Model.Messages.Any()) {
	@for (var i = 0; i < Model.Messages.Count(); i++) {
		<partial name="_DisplayItem" for="@Model.Messages[i]" />
	}

	<script>
		window.firstMessageId = @Model.Messages[0].Id
		window.newMessageCount = @Model.Messages.Count;
	</script>

}

<script>
	window.latest = @Model.Latest;
</script>
