@model IndexBoard

<div>
	<div class="board-last-post pad float-right mobile-hide" clickable-link-parent>
		@if (Model.LastMessage != null) {
			<p>
				<a asp-controller="@nameof(Topics)" asp-action="@nameof(Topics.Latest)" asp-route-id="@Model.LastMessage.Id">
					@Html.Raw(Model.LastMessage.ShortPreview)
				</a>
			</p>
			<p class="font-small subdued-text">by @Html.Raw(Model.LastMessage.LastReplyByName), <passed-time time="@Model.LastMessage.LastReplyPosted" /></p>
		}
	</div>

	<div class="board-name pad" clickable-link-parent>
		<h2><a asp-controller="@nameof(Topics)" asp-action="@nameof(Topics.Index)" asp-route-id="@Model.Id">@Model.Name</a></h2>
		<p class="font-small subdued-text small-pad-left">@Model.Description</p>

		@if (Model.LastMessage != null) {
			<div class="board-last-post pad mobile-only" clickable-link-parent>
				<p class="font-small subdued-text">Last post by @Html.Raw(Model.LastMessage.LastReplyByName), <passed-time time="@Model.LastMessage.LastReplyPosted" />
				<p>
					<a asp-controller="@nameof(Topics)" asp-action="@nameof(Topics.Latest)" asp-route-id="@Model.LastMessage.Id">
						@Html.Raw(Model.LastMessage.ShortPreview)
					</a>
				</p>
			</div>
		}
	</div>
</div>