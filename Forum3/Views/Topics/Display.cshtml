@model Forum3.ViewModels.Topics.Topic

<div asp-validation-summary="All" class="text-danger"></div>

@for (var i = 0; i < Model.Messages.Count(); i++) {
	@Html.Partial("_DisplayItem", Model.Messages[i])
}

<p>Reply to Thread:</p>
@Html.Partial("_CreateMessageForm", Model.ReplyInput)

@section scripts {
	<script src="~/js/TopicDisplay.js" asp-append-version="true"></script>
}

@section styles {
	<link rel="stylesheet" href="~/css/TopicDisplay.css" asp-append-version="true" />
}