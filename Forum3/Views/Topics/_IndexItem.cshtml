@model MessagePreview

<div class="content-box gap pad hover-highlight">
	<div class="pin float-right">
		<span class="icon-pushpin"></span>
	</div>
	<div class="details pointer" clickable-link-parent>
		<p>
			<a asp-action="@nameof(Topics.Display)" asp-route-id="@Model.Id">
				@Html.Raw(Model.ShortPreview)
			</a>
		</p>
		<div class="note pad-left">
			<p>Last reply posted @Model.LastReplyPosted by @Model.LastReplyByName</p>
			<p>
				@Model.Views
				@if (Model.Views > 1) {
					<text>views</text>
				}
				else {
					<text>view</text>
				}
			</p>
		</div>
	</div>
</div>