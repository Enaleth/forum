<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

    <title>@Html.Raw(ViewData["Title"])</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/Global.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/Global.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="navbar">
        <div class="container">
            <span class="navbar-brand">Forum3</span>
            <ul class="nav navbar-nav">
                <li><a asp-controller="Boards" asp-action="Index">Boards</a></li>
                <li><a asp-controller="Topics" asp-action="Index">Topics</a></li>
            </ul>
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>

    <nav class="actions">
        <ul>
            @RenderSection("PageActions", required: false)
        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <script src="~/js/Global.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"
                asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <script src="~/js/Global.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
