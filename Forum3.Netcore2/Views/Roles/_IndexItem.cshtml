@model IndexRole

<li class="small-pad">
	<p>
		<a asp-controller="@nameof(Roles)" asp-action="Edit" asp-route-id="@Model.Id">@Model.Name</a>
	</p>
	<div class="small-pad-left">
		<p class="note">@Model.Description</p>
		<p class="note">Added by @Model.CreatedBy, @Model.Created</p>
		<p class="note">Last modified by @Model.ModifiedBy, @Model.Modified</p>
		<p class="note">@Model.NumberOfUsers users</p>
	</div>
</li>